<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="5dp">

    <android.support.v7.widget.CardView
        android:layout_margin="12dp"
        android:elevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <ImageView
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/keranjang"
            android:background="@drawable/ic_keranjang"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp" />


        <LinearLayout

            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/label_nama_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:textColor="@android:color/black"
                android:text="Nama Customer"/>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp">
                <TextView

                    android:textColor="#000000"
                    android:id="@+id/text_nama_customer"
                    android:text="Nama Costumer : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_nama_customer"
                    android:id="@+id/nama_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#000000"
                    android:id="@+id/text_jenis_pakaian"
                    android:text="Jenis Pakaian : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_jenis_pakaian"
                    android:id="@+id/jenis_pakaian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#000000"
                    android:id="@+id/text_berat"
                    android:text="Berat Pakaian : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_berat"
                    android:id="@+id/berat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#000000"
                    android:id="@+id/text_total_harga"
                    android:text="Total Harga : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_total_harga"
                    android:id="@+id/total_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#000000"
                    android:id="@+id/text_nama_kasir"
                    android:text="Nama Kasir : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_nama_kasir"
                    android:id="@+id/nama_kasir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp">
                <TextView

                    android:textColor="#000000"
                    android:id="@+id/text_tanggal_simpan"
                    android:text="Tanggal Simpan : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_tanggal_simpan"
                    android:id="@+id/tgl_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="6dp"
                android:layout_width="0dp"
                android:layout_height="0dp">
                <TextView

                    android:textColor="#000000"
                    android:id="@+id/text_tanggal_update"
                    android:text="Tanggal Update : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text_tanggal_update"
                    android:id="@+id/tgl_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>



            </RelativeLayout>

            <TextView
                android:id="@+id/text_id_customer"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="0dp" />





        </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>







</RelativeLayout>